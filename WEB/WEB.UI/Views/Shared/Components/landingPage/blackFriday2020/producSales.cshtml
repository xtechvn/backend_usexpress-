@model List<Entities.ViewModels.ProductViewModel>
@if (Model != null)
{
    var rd = new Random();
    <section class="section bfday_section_s3 section_s3 clearfix">
        <div class="container">
            <h2 class="title-cate title-cate-bfday mb30">
                Sản Phẩm Khuyến Mãi
            </h2>
            <div class="list-product slide">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Where(x => x.label_id > 0).ToList())
                        {
                            int dc = rd.Next(20, 50);
                            string link_us_old = "https://usexpress.vn/amazon/item/" + Utilities.CommonHelper.CheckMaxLength((item.product_name).ToString(), 100) + "--" + item.product_code + "/";
                            <div class="swiper-slide">
                                <div class="product-item">
                                    <div class="wrap">
                                        <div class="sale">-@dc%</div>
                                        <a class="ava" href="@link_us_old" target="_blank">
                                            <img src="@item.image_size_product[0].Larger">
                                        </a>
                                        <div class="content">
                                            <h3 class="title">
                                                <a class="ava" href="@link_us_old" target="_blank">
                                                    @item.product_name
                                                </a>
                                            </h3>
                                            <div class="price">
                                                <strong>@((item.list_product_fee.list_product_fee["PRICE_LAST"] * item.rate).ToString("N0")) đ</strong>
                                                @*<div class="old">2,000,293 đ</div>*@
                                            </div>
                                            @*<div class="exist">
                                                    <span class="set">
                                                        <img src="images/icons/sale.png">
                                                    </span>
                                                    <span>Còn lại : 80%</span>
                                                    <div class="rest rest_80"></div>
                                                </div>*@
                                            <div class="center mt20">
                                                <a href="@link_us_old" class="btn" target="_blank">XEM NGAY</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </section>

}