                //            $(".p_" + i).html(log_order[j].createDate);
                //            continue;
                //        }
                //    }
                //}
            }
        }
    })

    function getOrderProgress(order_no) {
        return $.ajax({
            type: "POST",
            url: '/order/order-progress.json',
            data: {
                order_no: order_no
            },
            dataType: "html",
            async: !1,
            error: function () {
                console.log("Error occured")
            }
        });
    }

</script>